<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingTop="16dp">

        <EditText
            android:id="@+id/edt_question"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginRight="8dp"
            android:layout_weight="3"
            android:background="@drawable/edittext_button_style_rounded_2"
            android:ems="10"
            android:hint="Search your problem..."
            android:inputType="textLongMessage"
            android:minWidth="270dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_btn_search_question"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/edittext_button_style_rounded_2"
            android:src="@android:drawable/ic_menu_search"
            app:layout_constraintBottom_toBottomOf="@+id/popup_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popup_img" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_create_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_button_style_rounded"
            android:backgroundTint="#3D884C"
            android:drawableLeft="@drawable/ic_add_white"
            android:text="Question"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_my_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edittext_button_style_rounded_3"
            android:backgroundTint="#3D884C"
            android:drawableLeft="@drawable/ic_list_white"
            android:text="Questions"
            android:textSize="14dp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

</LinearLayout>