            <TextView
                android:id="@+id/tv_question_date_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line_x"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:text="TextView"
                android:textSize="13sp"
                tools:text="18 nov 2022 | by Ngoc Bao" />

            <ImageView
                android:id="@+id/img_avatar_author"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/view_line_x"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/tv_question_date_author"
                android:src="@drawable/ic_avatar_default" />

            <TextView
                android:id="@+id/tv_content_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_question_date_author"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:maxHeight="500dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit,rum eiusmod tempor incididunt ut labore et dolut labore et dolore magna magna aliqua?"
                android:textSize="16dp" />

