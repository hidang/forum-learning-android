<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="4dp"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/tv_item_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title cua cau hoi ne"
        android:textSize="17dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:id="@+id/img_item_question_author"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/tv_question_date_author"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_avatar_default" />
        <TextView
            android:id="@+id/tv_item_question_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Nguyen Duc Hung" />
        <TextView
            android:id="@+id/tv_item_question_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="08:14 10/2022" />
    </LinearLayout>


</LinearLayout>